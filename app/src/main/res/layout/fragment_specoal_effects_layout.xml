<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/chess_skin_bg">

    <ImageView
        android:id="@+id/chess_skin_image"
        android:layout_width="@dimen/dp_37"
        android:layout_height="@dimen/dp_112"
        android:layout_marginLeft="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@mipmap/chess_skin_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/chess_skin_image_bg"
        android:layout_width="@dimen/dp_320"
        android:layout_height="@dimen/dp_90"
        android:background="@mipmap/chess_skin_image_bg"
        app:layout_constraintBottom_toBottomOf="@+id/chess_skin_image"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintLeft_toLeftOf="@+id/chess_skin_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/chess_skin_image" />


    <ImageView
        android:id="@+id/checkerboard_background_check"
        android:layout_width="@dimen/dp_116"
        android:layout_height="@dimen/dp_104"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@mipmap/checkerboard_background_check"
        app:layout_constraintBottom_toBottomOf="@+id/chess_skin_image_bg"
        app:layout_constraintRight_toLeftOf="@+id/checkerboard_background"
        app:layout_constraintTop_toTopOf="@+id/chess_skin_image_bg" />

    <TextView
        android:id="@+id/checkerboard_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:background="@mipmap/checkerboard_title"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:textColor="@color/color_7e2c00"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/checker_board"
        app:layout_constraintLeft_toLeftOf="@+id/checkerboard_background_check"
        app:layout_constraintRight_toRightOf="@+id/checkerboard_background_check" />


    <ImageView
        android:id="@+id/checker_board"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/checkerboard_background_check"
        app:layout_constraintLeft_toLeftOf="@+id/checkerboard_background_check"
        app:layout_constraintRight_toRightOf="@+id/checkerboard_background_check"
        app:layout_constraintTop_toTopOf="@+id/checkerboard_background_check" />

    <ImageView
        android:layout_width="@dimen/dp_26"
        android:layout_height="@dimen/dp_26"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@mipmap/checkerboard_check_image"
        app:layout_constraintLeft_toLeftOf="@+id/checkerboard_background_check"
        app:layout_constraintRight_toRightOf="@+id/checkerboard_background_check"
        app:layout_constraintTop_toBottomOf="@+id/checker_board" />


    <ImageView
        android:id="@+id/checkerboard_background"
        android:layout_width="@dimen/dp_85"
        android:layout_height="@dimen/dp_74"
        android:background="@mipmap/checkerboard_background"
        app:layout_constraintBottom_toBottomOf="@+id/chess_skin_image_bg"
        app:layout_constraintLeft_toLeftOf="@+id/chess_skin_image_bg"
        app:layout_constraintRight_toRightOf="@+id/chess_skin_image_bg"
        app:layout_constraintTop_toTopOf="@+id/chess_skin_image_bg" />

    <ImageView
        android:id="@+id/checker_board2"
        android:layout_width="@dimen/dp_54"
        android:layout_height="@dimen/dp_54"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/checkerboard_background"
        app:layout_constraintLeft_toLeftOf="@+id/checkerboard_background"
        app:layout_constraintRight_toRightOf="@+id/checkerboard_background"
        app:layout_constraintTop_toTopOf="@+id/checkerboard_background" />

    <ImageView
        android:id="@+id/checkerboard_background_lock"
        android:layout_width="@dimen/dp_85"
        android:layout_height="@dimen/dp_74"
        android:visibility="gone"
        android:background="@mipmap/checkerboard_background_lock"
        app:layout_constraintBottom_toBottomOf="@+id/chess_skin_image_bg"
        app:layout_constraintLeft_toLeftOf="@+id/chess_skin_image_bg"
        app:layout_constraintRight_toRightOf="@+id/chess_skin_image_bg"
        app:layout_constraintTop_toTopOf="@+id/chess_skin_image_bg" />


    <ImageView
        android:id="@+id/checkerboard_background2"
        android:layout_width="@dimen/dp_85"
        android:layout_height="@dimen/dp_74"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@mipmap/checkerboard_background"
        app:layout_constraintBottom_toBottomOf="@+id/chess_skin_image_bg"
        app:layout_constraintRight_toRightOf="@+id/chess_skin_image_bg"
        app:layout_constraintTop_toTopOf="@+id/chess_skin_image_bg" />

    <ImageView
        android:id="@+id/checker_board3"
        android:layout_width="@dimen/dp_54"
        android:layout_height="@dimen/dp_54"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/checkerboard_background2"
        app:layout_constraintLeft_toLeftOf="@+id/checkerboard_background2"
        app:layout_constraintRight_toRightOf="@+id/checkerboard_background2"
        app:layout_constraintTop_toTopOf="@+id/checkerboard_background2" />

    <ImageView
        android:id="@+id/checkerboard_background_lock2"
        android:layout_width="@dimen/dp_85"
        android:layout_height="@dimen/dp_74"
        android:visibility="gone"
        android:background="@mipmap/checkerboard_background_lock"
        app:layout_constraintBottom_toBottomOf="@+id/checkerboard_background2"
        app:layout_constraintLeft_toLeftOf="@+id/checkerboard_background2"
        app:layout_constraintRight_toRightOf="@+id/checkerboard_background2"
        app:layout_constraintTop_toTopOf="@+id/checkerboard_background2" />


    <ImageView
        android:id="@+id/chess_specia_leffects_image"
        android:layout_width="@dimen/dp_37"
        android:layout_height="@dimen/dp_112"
        android:layout_marginLeft="@dimen/dp_60"
        android:background="@mipmap/chess_specia_leffects_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chess_skin_image" />


    <ImageView
        android:id="@+id/chess_specia_leffects_image_bg"
        android:layout_width="@dimen/dp_320"
        android:layout_height="@dimen/dp_90"
        android:background="@mipmap/chess_specia_bg"
        app:layout_constraintBottom_toBottomOf="@+id/chess_specia_leffects_image"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintLeft_toLeftOf="@+id/chess_specia_leffects_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/chess_specia_leffects_image" />


    <ImageView
        android:id="@+id/chess_specia_leffects_check"
        android:layout_width="@dimen/dp_116"
        android:layout_height="@dimen/dp_104"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@mipmap/chess_specia_leffects_check"
        app:layout_constraintBottom_toBottomOf="@+id/chess_specia_leffects_image_bg"
        app:layout_constraintRight_toLeftOf="@+id/chess_specia_background"
        app:layout_constraintTop_toTopOf="@+id/chess_specia_leffects_image_bg" />

    <TextView
        android:id="@+id/chess_specia_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:background="@mipmap/checkerboard_title"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:textColor="@color/color_7e2c00"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/chess_specia_board"
        app:layout_constraintLeft_toLeftOf="@+id/chess_specia_leffects_check"
        app:layout_constraintRight_toRightOf="@+id/chess_specia_leffects_check" />


    <ImageView
        android:id="@+id/chess_specia_board"
        android:layout_width="@dimen/dp_71"
        android:layout_height="@dimen/dp_71"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/chess_specia_leffects_check"
        app:layout_constraintLeft_toLeftOf="@+id/chess_specia_leffects_check"
        app:layout_constraintRight_toRightOf="@+id/chess_specia_leffects_check"
        app:layout_constraintTop_toTopOf="@+id/chess_specia_leffects_check" />

    <ImageView
        android:layout_width="@dimen/dp_26"
        android:layout_height="@dimen/dp_26"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@mipmap/checkerboard_check_image"
        app:layout_constraintLeft_toLeftOf="@+id/chess_specia_leffects_check"
        app:layout_constraintRight_toRightOf="@+id/chess_specia_leffects_check"
        app:layout_constraintTop_toBottomOf="@+id/chess_specia_board" />


    <ImageView
        android:id="@+id/chess_specia_background"
        android:layout_width="@dimen/dp_85"
        android:layout_height="@dimen/dp_74"
        android:background="@mipmap/chess_specia_background"
        app:layout_constraintBottom_toBottomOf="@+id/chess_specia_leffects_image_bg"
        app:layout_constraintLeft_toLeftOf="@+id/chess_specia_leffects_image_bg"
        app:layout_constraintRight_toRightOf="@+id/chess_specia_leffects_image_bg"
        app:layout_constraintTop_toTopOf="@+id/chess_specia_leffects_image_bg" />

    <ImageView
        android:id="@+id/chess_specia_board2"
        android:layout_width="@dimen/dp_54"
        android:layout_height="@dimen/dp_54"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/chess_specia_background"
        app:layout_constraintLeft_toLeftOf="@+id/chess_specia_background"
        app:layout_constraintRight_toRightOf="@+id/chess_specia_background"
        app:layout_constraintTop_toTopOf="@+id/chess_specia_background" />

    <ImageView
        android:id="@+id/chess_specia_lock"
        android:layout_width="@dimen/dp_85"
        android:layout_height="@dimen/dp_74"
        android:visibility="gone"
        android:background="@mipmap/checkerboard_background_lock"
        app:layout_constraintBottom_toBottomOf="@+id/chess_specia_board2"
        app:layout_constraintLeft_toLeftOf="@+id/chess_specia_board2"
        app:layout_constraintRight_toRightOf="@+id/chess_specia_board2"
        app:layout_constraintTop_toTopOf="@+id/chess_specia_board2" />


    <ImageView
        android:id="@+id/chess_specia_background2"
        android:layout_width="@dimen/dp_85"
        android:layout_height="@dimen/dp_74"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@mipmap/chess_specia_background"
        app:layout_constraintBottom_toBottomOf="@+id/chess_specia_leffects_image_bg"
        app:layout_constraintRight_toRightOf="@+id/chess_specia_leffects_image_bg"
        app:layout_constraintTop_toTopOf="@+id/chess_specia_leffects_image_bg" />

    <ImageView
        android:id="@+id/chess_specia_board3"
        android:layout_width="@dimen/dp_54"
        android:layout_height="@dimen/dp_54"
        app:layout_constraintBottom_toBottomOf="@+id/chess_specia_background2"
        app:layout_constraintLeft_toLeftOf="@+id/chess_specia_background2"
        app:layout_constraintRight_toRightOf="@+id/chess_specia_background2"
        app:layout_constraintTop_toTopOf="@+id/chess_specia_background2" />

    <ImageView
        android:id="@+id/chess_specia_lock2"
        android:layout_width="@dimen/dp_85"
        android:layout_height="@dimen/dp_74"
        android:background="@mipmap/checkerboard_background_lock"
        android:scaleType="fitXY"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/chess_specia_background2"
        app:layout_constraintLeft_toLeftOf="@+id/chess_specia_background2"
        app:layout_constraintRight_toRightOf="@+id/chess_specia_background2"
        app:layout_constraintTop_toTopOf="@+id/chess_specia_background2" />
</android.support.constraint.ConstraintLayout>