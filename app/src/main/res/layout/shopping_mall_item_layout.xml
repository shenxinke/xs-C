<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/shape_shopping_mall_bg"
        android:layout_width="@dimen/dp_95"
        android:layout_height="@dimen/dp_100"
        android:background="@drawable/shape_shopping_mall_bg" />

    <ImageView
        android:id="@+id/shopping_image"
        android:layout_width="@dimen/dp_65"
        android:layout_height="@dimen/dp_76"
        android:layout_marginTop="@dimen/dp_5"
        app:layout_constraintLeft_toLeftOf="@+id/shape_shopping_mall_bg"
        app:layout_constraintRight_toRightOf="@+id/shape_shopping_mall_bg"
        app:layout_constraintTop_toTopOf="@+id/shape_shopping_mall_bg" />


    <ImageView
        android:id="@+id/time_limit_bg"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_20"
        android:visibility="gone"
        android:background="@mipmap/time_limit_bg"
        app:layout_constraintLeft_toLeftOf="@+id/shape_shopping_mall_bg"
        app:layout_constraintTop_toTopOf="@+id/shape_shopping_mall_bg" />

    <ImageView
        android:id="@+id/shopping_discounts_bg"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:visibility="gone"
        android:background="@mipmap/shopping_discounts_bg"
        app:layout_constraintRight_toRightOf="@+id/shape_shopping_mall_bg"
        app:layout_constraintTop_toTopOf="@+id/shape_shopping_mall_bg" />


    <TextView
        android:id="@+id/shopping_money_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:drawablePadding="@dimen/dp_5"
        android:gravity="center"
        android:textColor="@color/color_813102"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/shape_shopping_mall_bg"
        app:layout_constraintLeft_toLeftOf="@+id/shape_shopping_mall_bg"
        app:layout_constraintRight_toRightOf="@+id/shape_shopping_mall_bg" />

    <ImageView
        android:id="@+id/whate_image"
        android:visibility="gone"
        android:layout_marginRight="@dimen/dp_5"
        app:layout_constraintRight_toLeftOf="@+id/shopping_money_image"
        app:layout_constraintTop_toTopOf="@+id/shopping_money_image"
        app:layout_constraintBottom_toBottomOf="@+id/shopping_money_image"
        android:background="@mipmap/main_money_image"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_13" />
</android.support.constraint.ConstraintLayout>