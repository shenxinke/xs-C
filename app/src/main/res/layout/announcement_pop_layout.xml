<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iamge_backgroud"
        android:layout_width="@dimen/dp_406"
        android:layout_height="@dimen/dp_259"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/shut_down"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintTop_toTopOf="@+id/iamge_backgroud"
        app:layout_constraintBottom_toBottomOf="@+id/iamge_backgroud"
        app:layout_constraintLeft_toRightOf="@+id/iamge_backgroud"
        app:layout_constraintRight_toRightOf="@+id/iamge_backgroud"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:background="@mipmap/set_up_shut_down" />
</android.support.constraint.ConstraintLayout>