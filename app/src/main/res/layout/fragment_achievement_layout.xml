<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_13"
        android:background="@mipmap/achievement_fragment_bg" />

    <Button
        android:id="@+id/achievement_select"
        android:layout_width="@dimen/dp_97"
        android:layout_height="@dimen/dp_31"
        android:layout_marginLeft="@dimen/dp_60"
        android:text="已获得"
        android:textSize="14sp"
        android:textColor="@color/color_274701"
        android:background="@mipmap/achievement_select"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/achievement_no_select"
        android:layout_width="@dimen/dp_97"
        android:layout_height="@dimen/dp_31"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="尚未获得"
        android:textSize="14sp"
        android:stateListAnimator="@null"
        android:textColor="@color/color_274701"
        android:background="@mipmap/achievement_no_select"
        app:layout_constraintLeft_toRightOf="@+id/achievement_select"
        app:layout_constraintTop_toTopOf="parent" />


    <com.xswq.consumer.view.MyViewPager
        android:id="@+id/personal_cente_special_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_40"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/red_dot"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_10"
        app:layout_constraintTop_toTopOf="@+id/achievement_no_select"
        app:layout_constraintRight_toRightOf="@+id/achievement_no_select"
        android:background="@mipmap/red_dot"
        android:visibility="gone"
        android:layout_width="@dimen/dp_9"
        android:layout_height="@dimen/dp_9" />


</android.support.constraint.ConstraintLayout>