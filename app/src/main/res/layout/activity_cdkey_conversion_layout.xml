<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/half"
    >

    <ImageView
        android:id="@+id/conversoion_bg"
        android:layout_width="@dimen/dp_441"
        android:layout_height="@dimen/dp_209"
        android:background="@mipmap/conversoion_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_back"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:background="@mipmap/set_up_shut_down"
        app:layout_constraintRight_toRightOf="@+id/conversoion_bg"
        app:layout_constraintTop_toTopOf="@+id/conversoion_bg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_35"
        android:text="CDKEY兑换"
        android:textColor="@color/color_8d3c00"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/conversoion_bg"
        app:layout_constraintRight_toRightOf="@+id/conversoion_bg"
        app:layout_constraintTop_toTopOf="@+id/conversoion_bg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_15"
        android:text="请输入CDKEY:"
        android:textColor="@color/color_8d3c00"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/cdkey_text"
        app:layout_constraintRight_toLeftOf="@+id/cdkey_text"
        app:layout_constraintTop_toTopOf="@+id/cdkey_text" />

    <EditText
        android:id="@+id/cdkey_text"
        android:layout_width="@dimen/dp_266"
        android:layout_height="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_38"
        android:paddingLeft="@dimen/dp_10"
        android:background="@drawable/shape_cdkey_conversion_bg"
        app:layout_constraintBottom_toBottomOf="@+id/conversoion_bg"
        app:layout_constraintRight_toRightOf="@+id/conversoion_bg"
        app:layout_constraintTop_toTopOf="@+id/conversoion_bg"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/cdkey_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:textColor="@color/color_ff0000"
        android:textSize="11sp"
        android:paddingLeft="@dimen/dp_10"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@+id/cdkey_text"
        app:layout_constraintTop_toBottomOf="@+id/cdkey_text" />

    <Button
        android:id="@+id/green_button"
        android:layout_width="@dimen/dp_110"
        android:layout_height="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_35"
        android:background="@mipmap/green_button"
        android:paddingBottom="@dimen/dp_5"
        android:text="确认兑换"
        android:textColor="@color/color_4b8e05"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/conversoion_bg"
        app:layout_constraintLeft_toLeftOf="@+id/conversoion_bg"
        app:layout_constraintRight_toRightOf="@+id/conversoion_bg" />
</android.support.constraint.ConstraintLayout>