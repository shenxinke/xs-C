<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/half">

    <ImageView
        android:id="@+id/play_chess_background2"
        android:layout_width="@dimen/dp_579"
        android:layout_height="@dimen/dp_320"
        android:layout_marginLeft="@dimen/dp_46"
        android:visibility="invisible"
        android:background="@mipmap/play_chess_background2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/play_chess_head_bg"
        android:layout_width="@dimen/dp_530"
        android:layout_height="@dimen/dp_77"
        android:background="@mipmap/play_chess_head_bg"
        android:layout_marginTop="@dimen/dp_30"
        android:visibility="invisible"
        app:layout_constraintRight_toRightOf="@+id/play_chess_background2"
        app:layout_constraintLeft_toLeftOf="@+id/play_chess_background2"
        app:layout_constraintTop_toTopOf="@+id/play_chess_background2" />

    <ImageView
        android:id="@+id/play_chess_message_bg"
        android:layout_width="@dimen/dp_530"
        android:layout_height="@dimen/dp_187"
        android:layout_marginTop="@dimen/dp_7"
        android:visibility="invisible"
        android:background="@mipmap/play_chess_message_bg"
        app:layout_constraintRight_toRightOf="@+id/play_chess_background2"
        app:layout_constraintLeft_toLeftOf="@+id/play_chess_background2"
        app:layout_constraintTop_toBottomOf="@+id/play_chess_head_bg" />

    <ImageView
        android:id="@+id/guide_start_image_text"
        android:layout_width="@dimen/dp_205"
        android:layout_height="@dimen/dp_66"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@mipmap/guide_play_chess_start_text"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/rating_bar"
        app:layout_constraintLeft_toLeftOf="@+id/rating_bar" />


    <RelativeLayout
        android:id="@+id/rating_bar"
        android:layout_width="@dimen/dp_260"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_43"
        android:layout_marginTop="@dimen/dp_17"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="@+id/play_chess_message_bg"
        app:layout_constraintRight_toLeftOf="@+id/play_chess_matching_button"
        app:layout_constraintTop_toTopOf="@+id/play_chess_message_bg">

        <LinearLayout
            android:id="@+id/one_line"
            android:layout_width="@dimen/dp_250"
            android:layout_height="@dimen/dp_40"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/start1"
                android:layout_width="@dimen/dp_39"
                android:layout_height="@dimen/dp_36"
                android:background="@mipmap/yellow_star" />

            <ImageView
                android:id="@+id/start2"
                android:layout_width="@dimen/dp_39"
                android:layout_height="@dimen/dp_36"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@mipmap/yellow_star" />

            <ImageView
                android:id="@+id/start3"
                android:layout_width="@dimen/dp_39"
                android:layout_height="@dimen/dp_36"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@mipmap/yellow_star" />

            <ImageView
                android:id="@+id/start4"
                android:layout_width="@dimen/dp_39"
                android:layout_height="@dimen/dp_36"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@mipmap/yellow_star" />

            <ImageView
                android:id="@+id/start5"
                android:layout_width="@dimen/dp_39"
                android:layout_height="@dimen/dp_36"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@mipmap/yellow_star" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/two_line"
            android:layout_width="@dimen/dp_258"
            android:layout_height="@dimen/dp_40"
            android:layout_below="@+id/one_line"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/start6"
                android:layout_width="@dimen/dp_39"
                android:layout_height="@dimen/dp_36"
                android:background="@mipmap/yellow_star" />

            <ImageView
                android:id="@+id/start7"
                android:layout_width="@dimen/dp_39"
                android:layout_height="@dimen/dp_36"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@mipmap/yellow_star" />

            <ImageView
                android:id="@+id/start8"
                android:layout_width="@dimen/dp_39"
                android:layout_height="@dimen/dp_36"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@mipmap/yellow_star" />

            <ImageView
                android:id="@+id/start9"
                android:layout_width="@dimen/dp_39"
                android:layout_height="@dimen/dp_36"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@mipmap/yellow_star" />

            <ImageView
                android:id="@+id/start10"
                android:layout_width="@dimen/dp_39"
                android:layout_height="@dimen/dp_36"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@mipmap/yellow_star" />

        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/guide_start_head_image"
        android:layout_width="@dimen/dp_61"
        android:layout_height="@dimen/dp_61"
        android:layout_marginLeft="@dimen/dp_230"
        android:layout_marginTop="@dimen/dp_30"
        android:visibility="invisible"
        android:background="@mipmap/guide_head_image"
        app:layout_constraintLeft_toLeftOf="@+id/rating_bar"
        app:layout_constraintTop_toTopOf="@+id/rating_bar" />


    <ImageView
        android:id="@+id/guide_play_chess_mode_text"
        android:layout_width="@dimen/dp_270"
        android:layout_height="@dimen/dp_67"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@mipmap/guide_play_chess_mode_text"
        app:layout_constraintBottom_toTopOf="@+id/game_mode_bg"
        app:layout_constraintLeft_toLeftOf="@+id/game_mode_bg" />

    <ImageView
        android:id="@+id/game_mode_bg"
        android:layout_width="@dimen/dp_260"
        android:layout_height="@dimen/dp_70"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="@+id/game_mode"
        app:layout_constraintRight_toRightOf="@+id/play_chesss_up_down_text"
        app:layout_constraintTop_toBottomOf="@+id/rating_bar" />

    <ImageView
        android:id="@+id/guide_head_image"
        android:layout_width="@dimen/dp_61"
        android:layout_height="@dimen/dp_61"
        android:background="@mipmap/guide_head_image"
        app:layout_constraintLeft_toRightOf="@+id/play_chesss_nineteen_text"
        app:layout_constraintTop_toTopOf="@+id/play_chesss_nineteen_text" />

    <TextView
        android:id="@+id/game_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:text="比赛模式："
        android:textColor="@color/color_1775a9"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@+id/rating_bar"
        app:layout_constraintTop_toBottomOf="@+id/rating_bar" />

    <ImageView
        android:id="@+id/play_chess_firends_image"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@mipmap/play_chess_select"
        app:layout_constraintBottom_toBottomOf="@+id/game_mode"
        app:layout_constraintLeft_toRightOf="@+id/game_mode"
        app:layout_constraintTop_toTopOf="@+id/game_mode" />

    <TextView
        android:id="@+id/play_chess_firends_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="友谊赛"
        android:textColor="@color/color_1775a9"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/play_chess_firends_image"
        app:layout_constraintLeft_toRightOf="@+id/play_chess_firends_image"
        app:layout_constraintTop_toTopOf="@+id/play_chess_firends_image" />

    <ImageView
        android:id="@+id/play_chess_up_down_image"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="@mipmap/play_chess_un_select"
        app:layout_constraintBottom_toBottomOf="@+id/play_chess_firends_text"
        app:layout_constraintLeft_toRightOf="@+id/play_chess_firends_text"
        app:layout_constraintTop_toTopOf="@+id/play_chess_firends_text" />

    <TextView
        android:id="@+id/play_chesss_up_down_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="升降级"
        android:textColor="@color/color_1775a9"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/play_chess_up_down_image"
        app:layout_constraintLeft_toRightOf="@+id/play_chess_up_down_image"
        app:layout_constraintTop_toTopOf="@+id/play_chess_up_down_image" />

    <TextView
        android:id="@+id/chessboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:text="棋盘大小："
        android:textColor="@color/color_1775a9"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@+id/rating_bar"
        app:layout_constraintTop_toBottomOf="@+id/game_mode" />

    <ImageView
        android:id="@+id/play_chess_nine_image"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@mipmap/play_chess_select"
        app:layout_constraintBottom_toBottomOf="@+id/chessboard"
        app:layout_constraintLeft_toRightOf="@+id/chessboard"
        app:layout_constraintTop_toTopOf="@+id/chessboard" />

    <TextView
        android:id="@+id/play_chess_nine_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9路"
        android:textColor="@color/color_1775a9"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/chessboard"
        app:layout_constraintLeft_toLeftOf="@+id/play_chess_firends_text"
        app:layout_constraintRight_toRightOf="@+id/play_chess_firends_text"
        app:layout_constraintTop_toTopOf="@+id/chessboard" />

    <ImageView
        android:id="@+id/play_chess_nineteen_image"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="@mipmap/play_chess_un_select"
        app:layout_constraintBottom_toBottomOf="@+id/play_chess_nine_image"
        app:layout_constraintLeft_toRightOf="@+id/play_chess_firends_text"
        app:layout_constraintTop_toTopOf="@+id/play_chess_nine_image" />

    <TextView
        android:id="@+id/play_chesss_nineteen_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="19路"
        android:textColor="@color/color_1775a9"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/play_chess_nine_image"
        app:layout_constraintLeft_toLeftOf="@+id/play_chesss_up_down_text"
        app:layout_constraintRight_toRightOf="@+id/play_chesss_up_down_text"
        app:layout_constraintTop_toTopOf="@+id/play_chess_nine_image" />


    <Button
        android:id="@+id/play_chess_matching_button"
        android:layout_width="155dp"
        android:layout_height="@dimen/dp_60"
        android:layout_marginRight="@dimen/dp_35"
        android:background="@mipmap/play_chess_matching_button"
        android:paddingLeft="@dimen/dp_40"
        android:paddingTop="@dimen/dp_10"
        android:text="开始匹配"
        android:textColor="@color/color_4c8e05"
        android:textSize="17sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/play_chess_nineteen_button"
        app:layout_constraintLeft_toRightOf="@+id/rating_bar"
        app:layout_constraintRight_toRightOf="@+id/play_chess_message_bg"
        app:layout_constraintTop_toTopOf="@+id/play_chess_message_bg" />

    <ImageView
        android:id="@+id/play_chess_matching_text"
        android:layout_width="@dimen/dp_215"
        android:layout_height="@dimen/dp_42"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@mipmap/play_chess_matching_text"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/play_chess_matching_button"
        app:layout_constraintRight_toLeftOf="@+id/play_chess_matching_button"
        app:layout_constraintTop_toTopOf="@+id/play_chess_matching_button" />

    <ImageView
        android:id="@+id/guide_play_chess_matching_head"
        android:layout_width="@dimen/dp_61"
        android:layout_height="@dimen/dp_61"
        android:layout_marginLeft="@dimen/dp_70"
        android:layout_marginTop="@dimen/dp_35"
        android:background="@mipmap/guide_head_image"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="@+id/play_chess_matching_button"
        app:layout_constraintTop_toTopOf="@+id/play_chess_matching_button" />

    <Button
        android:id="@+id/play_chess_nineteen_button"
        android:layout_width="155dp"
        android:layout_height="@dimen/dp_60"
        android:background="@mipmap/play_chess_nineteen_button"
        android:paddingLeft="@dimen/dp_40"
        android:paddingTop="@dimen/dp_10"
        android:text="本地对弈"
        android:textColor="@color/color_6d4000"
        android:textSize="17sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/play_chess_message_bg"
        app:layout_constraintLeft_toLeftOf="@+id/play_chess_matching_button"
        app:layout_constraintTop_toBottomOf="@+id/play_chess_matching_button" />

    <ImageView
        android:id="@+id/play_chess_nineteen_text"
        android:layout_width="@dimen/dp_215"
        android:layout_height="@dimen/dp_42"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@mipmap/play_chess_nineteen_text"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/play_chess_nineteen_button"
        app:layout_constraintRight_toLeftOf="@+id/play_chess_nineteen_button"
        app:layout_constraintTop_toTopOf="@+id/play_chess_nineteen_button" />

    <ImageView
        android:id="@+id/guide_play_chess_nineteen_head"
        android:layout_width="@dimen/dp_61"
        android:layout_height="@dimen/dp_61"
        android:layout_marginLeft="@dimen/dp_70"
        android:layout_marginTop="@dimen/dp_35"
        android:background="@mipmap/guide_head_image"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="@+id/play_chess_nineteen_button"
        app:layout_constraintTop_toTopOf="@+id/play_chess_nineteen_button" />

</android.support.constraint.ConstraintLayout>