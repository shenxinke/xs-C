<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_bg"
        android:layout_width="@dimen/dp_210"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@mipmap/main_popue_bg"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/set_up_shut_down"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:background="@mipmap/set_up_shut_down"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/system_setup"
        android:layout_width="@dimen/dp_112"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_25"
        android:background="@mipmap/btn_setup_system"
        android:text="系统设置"
        android:textColor="@color/color_4b8e05"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold"
        android:paddingBottom="@dimen/dp_5"
        app:layout_constraintBottom_toTopOf="@+id/system_about_us"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="@+id/image_bg"
        app:layout_constraintRight_toRightOf="@+id/image_bg"
        app:layout_constraintTop_toTopOf="@+id/image_bg" />

    <Button
        android:id="@+id/system_about_us"
        android:layout_width="@dimen/dp_112"
        android:layout_height="@dimen/dp_40"
        android:background="@mipmap/btn_setup_system"
        android:text="关于我们"
        android:textColor="@color/color_4b8e05"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold"
        android:paddingBottom="@dimen/dp_5"
        app:layout_constraintBottom_toTopOf="@+id/system_helper"
        app:layout_constraintLeft_toLeftOf="@+id/system_setup"
        app:layout_constraintRight_toRightOf="@+id/system_setup"
        app:layout_constraintTop_toBottomOf="@+id/system_setup" />

    <Button
        android:id="@+id/system_helper"
        android:layout_width="@dimen/dp_112"
        android:layout_height="@dimen/dp_40"
        android:background="@mipmap/btn_setup_system"
        android:text="帮助中心"
        android:textColor="@color/color_4b8e05"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold"
        android:paddingBottom="@dimen/dp_5"
        app:layout_constraintBottom_toTopOf="@+id/system_switchuser"
        app:layout_constraintLeft_toLeftOf="@+id/system_about_us"
        app:layout_constraintRight_toRightOf="@+id/system_about_us"
        app:layout_constraintTop_toBottomOf="@+id/system_about_us" />

    <Button
        android:id="@+id/system_switchuser"
        android:layout_width="@dimen/dp_112"
        android:layout_height="@dimen/dp_40"
        android:background="@mipmap/btn_setup_system"
        android:text="在线客服"
        android:textColor="@color/color_4b8e05"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold"
        android:paddingBottom="@dimen/dp_5"
        app:layout_constraintBottom_toTopOf="@+id/customer_feedback"
        app:layout_constraintLeft_toLeftOf="@+id/system_helper"
        app:layout_constraintRight_toRightOf="@+id/system_helper"
        app:layout_constraintTop_toBottomOf="@+id/system_helper" />

    <Button
        android:id="@+id/customer_feedback"
        android:layout_width="@dimen/dp_112"
        android:layout_height="@dimen/dp_40"
        android:background="@mipmap/btn_setup_system"
        android:text="意见反馈"
        android:textColor="@color/color_4b8e05"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold"
        android:paddingBottom="@dimen/dp_5"
        app:layout_constraintBottom_toTopOf="@+id/cdkey_button"
        app:layout_constraintLeft_toLeftOf="@+id/system_helper"
        app:layout_constraintRight_toRightOf="@+id/system_helper"
        app:layout_constraintTop_toBottomOf="@+id/system_switchuser" />

    <Button
        android:id="@+id/cdkey_button"
        android:layout_width="@dimen/dp_112"
        android:layout_height="@dimen/dp_40"
        android:background="@mipmap/btn_setup_system"
        android:text="CDKEY兑换"
        android:textColor="@color/color_4b8e05"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold"
        android:paddingBottom="@dimen/dp_5"
        app:layout_constraintBottom_toTopOf="@+id/check_for_updates"
        app:layout_constraintLeft_toLeftOf="@+id/system_helper"
        app:layout_constraintRight_toRightOf="@+id/system_helper"
        app:layout_constraintTop_toBottomOf="@+id/customer_feedback" />

    <Button
        android:id="@+id/check_for_updates"
        android:layout_width="@dimen/dp_112"
        android:layout_height="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_25"
        android:background="@mipmap/btn_setup_system"
        android:text="切换账号"
        android:textColor="@color/color_4b8e05"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold"
        android:paddingBottom="@dimen/dp_5"
        app:layout_constraintBottom_toBottomOf="@+id/image_bg"
        app:layout_constraintLeft_toLeftOf="@+id/system_helper"
        app:layout_constraintRight_toRightOf="@+id/system_helper"
        app:layout_constraintTop_toBottomOf="@+id/cdkey_button" />

</android.support.constraint.ConstraintLayout>
