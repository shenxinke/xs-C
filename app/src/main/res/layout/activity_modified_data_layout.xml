<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/half">


    <ImageView
        android:id="@+id/modified_data_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_38"
        android:layout_marginLeft="@dimen/dp_114"
        android:layout_marginRight="@dimen/dp_112"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@mipmap/system_about_us_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_35"
        android:text="姓名："
        android:textColor="@color/color_8d3c00"
        android:textSize="15sp"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintLeft_toLeftOf="@+id/modified_data_bg"
        app:layout_constraintRight_toRightOf="@+id/modified_data_bg"
        app:layout_constraintTop_toTopOf="@+id/modified_data_bg" />

    <EditText
        android:id="@+id/edit_text_name"
        android:layout_width="@dimen/dp_180"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_20"
        android:background="@drawable/shape_edite_line_bg"
        android:paddingLeft="@dimen/dp_10"
        android:textSize="12sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/text_name"
        app:layout_constraintLeft_toRightOf="@+id/text_name"
        app:layout_constraintTop_toTopOf="@+id/text_name" />

    <TextView
        android:id="@+id/text_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:text="性别："
        android:textColor="@color/color_8d3c00"
        android:textSize="15sp"
        app:layout_constraintRight_toRightOf="@+id/text_name"
        app:layout_constraintTop_toBottomOf="@+id/text_name" />


    <ImageView
        android:id="@+id/man"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="@mipmap/man"
        app:layout_constraintBottom_toBottomOf="@+id/text_sex"
        app:layout_constraintLeft_toLeftOf="@+id/edit_text_name"
        app:layout_constraintTop_toTopOf="@+id/text_sex" />

    <ImageView
        android:id="@+id/man_check"
        android:layout_width="@dimen/dp_22"
        android:layout_height="@dimen/dp_23"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@mipmap/settings_item_check"
        app:layout_constraintBottom_toBottomOf="@+id/man"
        app:layout_constraintLeft_toRightOf="@+id/man"
        app:layout_constraintTop_toTopOf="@+id/man" />

    <ImageView
        android:id="@+id/woman"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:background="@mipmap/woman"
        app:layout_constraintLeft_toRightOf="@+id/man_check"
        app:layout_constraintTop_toTopOf="@+id/man" />

    <ImageView
        android:id="@+id/woman_check"
        android:layout_width="@dimen/dp_22"
        android:layout_height="@dimen/dp_23"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@mipmap/settings_item_uncheck"
        app:layout_constraintBottom_toBottomOf="@+id/woman"
        app:layout_constraintLeft_toRightOf="@+id/woman"
        app:layout_constraintTop_toTopOf="@+id/woman" />


    <TextView
        android:id="@+id/text_birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:text="生日："
        android:textColor="@color/color_8d3c00"
        android:textSize="15sp"
        app:layout_constraintRight_toRightOf="@+id/text_name"
        app:layout_constraintTop_toBottomOf="@+id/text_sex" />


    <TextView
        android:id="@+id/text_start_birthday"
        android:layout_width="@dimen/dp_180"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_20"
        android:background="@drawable/shape_edite_line_bg"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:editable="false"
         android:paddingRight="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="@+id/text_birthday"
        app:layout_constraintLeft_toRightOf="@+id/text_birthday"
        app:layout_constraintTop_toTopOf="@+id/text_birthday" />


    <TextView
        android:id="@+id/text_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:text="居住地："
        android:textColor="@color/color_8d3c00"
        android:textSize="15sp"
        app:layout_constraintRight_toRightOf="@+id/text_name"
        app:layout_constraintTop_toBottomOf="@+id/text_birthday" />


    <TextView
        android:id="@+id/edit_text_address"
        android:layout_width="@dimen/dp_180"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_20"
        android:background="@drawable/shape_edite_line_bg"
        android:textColor="@color/black"
        android:gravity="center"
        android:singleLine="true"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_address"
        app:layout_constraintLeft_toRightOf="@+id/text_address"
        app:layout_constraintTop_toTopOf="@+id/text_address" />


    <TextView
        android:id="@+id/text_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:text="手机号："
        android:textColor="@color/color_8d3c00"
        android:textSize="15sp"
        app:layout_constraintRight_toRightOf="@+id/text_name"
        app:layout_constraintTop_toBottomOf="@+id/text_address" />


    <TextView
        android:id="@+id/text_phone_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:text="13693263002"
        android:textColor="@color/color_8d3c00"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_phone"
        app:layout_constraintLeft_toRightOf="@+id/text_phone"
        app:layout_constraintTop_toTopOf="@+id/text_phone" />

    <Button
        android:id="@+id/button_save"
        android:layout_width="@dimen/dp_90"
        android:layout_height="35dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@mipmap/green_button"
        android:paddingBottom="@dimen/dp_5"
        android:text="保存"
        android:textColor="@color/color_4b8e05"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/text_name"
        app:layout_constraintRight_toLeftOf="@+id/button_cancel"
        app:layout_constraintTop_toBottomOf="@+id/text_phone" />

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="@dimen/dp_90"
        android:layout_height="35dp"
        android:background="@mipmap/yellow_button_bg"
        android:paddingBottom="@dimen/dp_5"
        android:text="取消"
        android:textColor="@color/color_8e5605"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/button_save"
        app:layout_constraintRight_toRightOf="@+id/edit_text_name"
        app:layout_constraintTop_toTopOf="@+id/button_save" />
</android.support.constraint.ConstraintLayout>