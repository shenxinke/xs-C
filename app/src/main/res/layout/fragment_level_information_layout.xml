<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/leve_information_fragment_bg">

    <ImageView
        android:id="@+id/leve_information_titele"
        android:layout_width="@dimen/dp_168"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@mipmap/leve_information_titele"
        app:layout_constraintHorizontal_bias="0.18"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chess_leve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/color_813102"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/leve_information_titele"
        app:layout_constraintTop_toBottomOf="@+id/leve_information_titele" />

    <TextView
        android:id="@+id/user_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:textColor="@color/color_813102"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/leve_information_titele"
        app:layout_constraintTop_toBottomOf="@+id/chess_leve" />

    <TextView
        android:id="@+id/class_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:text=""
        android:textColor="@color/color_813102"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/leve_information_titele"
        app:layout_constraintTop_toBottomOf="@+id/user_data" />

    <TextView
        android:id="@+id/question_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:text=""
        android:textColor="@color/color_813102"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/leve_information_titele"
        app:layout_constraintTop_toBottomOf="@+id/class_num" />

    <TextView
        android:id="@+id/accuracy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:text=""
        android:textColor="@color/color_813102"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/leve_information_titele"
        app:layout_constraintTop_toBottomOf="@+id/question_num" />

    <TextView
        android:id="@+id/num_of_games"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:text=""
        android:textColor="@color/color_813102"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/leve_information_titele"
        app:layout_constraintTop_toBottomOf="@+id/accuracy" />

    <TextView
        android:id="@+id/win_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:text=""
        android:textColor="@color/color_813102"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/leve_information_titele"
        app:layout_constraintTop_toBottomOf="@+id/num_of_games" />


    <ImageView
        android:id="@+id/schedule_title"
        android:layout_width="@dimen/dp_168"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@mipmap/schedule_title"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridView
        android:id="@+id/grid_view"
        android:layout_width="@dimen/dp_202"
        android:layout_height="@dimen/dp_90"
        android:layout_marginLeft="@dimen/dp_43"
        android:layout_marginTop="@dimen/dp_25"
        android:numColumns="5"
        android:gravity="center"
        android:scrollbars="none"
        app:layout_constraintLeft_toLeftOf="@+id/schedule_title"
        app:layout_constraintRight_toRightOf="@+id/schedule_title"
        app:layout_constraintTop_toBottomOf="@+id/schedule_title" />

    <Button
        android:id="@+id/my_chess_manual"
        android:layout_width="@dimen/dp_88"
        android:layout_height="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_35"
        android:background="@mipmap/yellow_button_bg"
        android:paddingBottom="@dimen/dp_5"
        android:text="我的棋谱"
        android:textColor="@color/color_8e5605"
        app:layout_constraintLeft_toLeftOf="@+id/schedule_title"
        app:layout_constraintRight_toRightOf="@+id/schedule_title"
        app:layout_constraintTop_toBottomOf="@+id/grid_view" />
</android.support.constraint.ConstraintLayout>