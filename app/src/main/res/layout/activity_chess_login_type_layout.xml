<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/activity_chess_login_type_bg">



    <LinearLayout
        android:layout_width="@dimen/dp_422"
        android:layout_height="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_30"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/login_we_chat"
            android:layout_width="@dimen/dp_124"
            android:layout_height="@dimen/dp_38"
            android:background="@mipmap/login_we_chat"
            android:text="微信登录"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/login_phone"
            android:layout_width="@dimen/dp_124"
            android:layout_height="@dimen/dp_38"
            android:layout_marginLeft="@dimen/dp_25"
            android:background="@mipmap/login_phone"
            android:text="手机号登录"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/login_tourist"
            android:layout_width="@dimen/dp_124"
            android:layout_height="@dimen/dp_38"
            android:layout_marginLeft="@dimen/dp_25"
            android:background="@mipmap/login_tourist"
            android:text="游客登录"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>