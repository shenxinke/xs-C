<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/half">


    <ImageView
        android:id="@+id/main_image_head"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_65"
        android:layout_marginLeft="@dimen/dp_22"
        android:layout_marginTop="@dimen/dp_18"
        android:src="@mipmap/main_image_head"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"  />

    <ImageView
        android:id="@+id/image_head"
        android:layout_width="@dimen/dp_39"
        android:layout_height="@dimen/dp_39"
        android:layout_marginLeft="@dimen/dp_7"
        android:layout_marginTop="@dimen/dp_4"
        app:layout_constraintLeft_toLeftOf="@+id/main_image_head"
        app:layout_constraintTop_toTopOf="@+id/main_image_head" />

    <ImageView
        android:id="@+id/main_personage_guide_head"
        android:layout_width="@dimen/dp_61"
        android:layout_height="@dimen/dp_62"
        android:background="@mipmap/guide_head_image"
        android:layout_marginLeft="@dimen/dp_15"
        app:layout_constraintTop_toTopOf="@+id/image_head"
        android:layout_marginTop="@dimen/dp_15"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@+id/image_head" />

    <ImageView
        android:id="@+id/main_personage_guide_text"
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_35"
        android:visibility="gone"
        android:background="@mipmap/guide_personal_information"
        app:layout_constraintBottom_toBottomOf="@+id/main_image_head"
        app:layout_constraintLeft_toRightOf="@+id/image_head"
        app:layout_constraintTop_toTopOf="@+id/main_image_head" />

    <ImageView
        android:id="@+id/main_story"
        android:layout_width="@dimen/dp_346"
        android:layout_height="@dimen/dp_250"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_5"
        android:scaleType="fitXY"
        android:src="@mipmap/main_story"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/main_play_chess"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />

    <ImageView
        android:id="@+id/main_story_guide_text"
        android:layout_width="@dimen/dp_226"
        android:layout_height="@dimen/dp_43"
        android:layout_marginLeft="@dimen/dp_30"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/main_story"
        app:layout_constraintLeft_toRightOf="@+id/main_story"
        app:layout_constraintTop_toTopOf="@+id/main_story" />

    <ImageView
        android:id="@+id/main_story_guide_head"
        android:layout_width="@dimen/dp_61"
        android:layout_height="@dimen/dp_62"
        android:background="@mipmap/guide_head_image"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/main_story"
        app:layout_constraintRight_toRightOf="@+id/main_story" />

    <ImageView
        android:id="@+id/main_play_chess"
        android:layout_width="@dimen/dp_249"
        android:layout_height="@dimen/dp_120"
        android:layout_marginRight="@dimen/dp_15"
        android:scaleType="fitXY"
        android:visibility="invisible"
        android:src="@mipmap/main_play_chess_layer"
        app:layout_constraintLeft_toRightOf="@+id/main_story"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/main_story" />

    <ImageView
        android:id="@+id/main_play_chess_guide_text"
        android:layout_width="@dimen/dp_227"
        android:layout_height="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_26"
        android:layout_marginLeft="@dimen/dp_30"
        android:background="@mipmap/guide_main_sotry"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/main_play_chess"
        app:layout_constraintLeft_toLeftOf="@+id/main_play_chess"
        app:layout_constraintRight_toRightOf="@+id/main_play_chess" />

    <ImageView
        android:id="@+id/main_play_chess_guide_head"
        android:layout_width="@dimen/dp_61"
        android:layout_height="@dimen/dp_62"
        android:background="@mipmap/guide_head_image"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/main_play_chess"
        app:layout_constraintRight_toRightOf="@+id/main_play_chess" />

    <ImageView
        android:id="@+id/main_wonderfuk_activity"
        android:layout_width="@dimen/dp_249"
        android:layout_height="@dimen/dp_120"
        android:layout_marginTop="@dimen/dp_10"
        android:scaleType="fitXY"
        android:visibility="invisible"
        android:src="@mipmap/main_wonderfuk_activity_layer"
        app:layout_constraintLeft_toLeftOf="@+id/main_play_chess"
        app:layout_constraintRight_toRightOf="@+id/main_play_chess"
        app:layout_constraintTop_toBottomOf="@+id/main_play_chess" />

    <ImageView
        android:id="@+id/main_wonderfuk_guide_text"
        android:layout_width="@dimen/dp_227"
        android:layout_height="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_26"
        android:layout_marginLeft="@dimen/dp_30"
        android:background="@mipmap/guide_main_sotry"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/main_wonderfuk_activity"
        app:layout_constraintRight_toLeftOf="@+id/main_wonderfuk_activity"
        app:layout_constraintTop_toTopOf="@+id/main_wonderfuk_activity" />

    <ImageView
        android:id="@+id/main_wonderfuk_guide_head"
        android:layout_width="@dimen/dp_61"
        android:layout_height="@dimen/dp_62"
        android:background="@mipmap/guide_head_image"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/main_wonderfuk_activity"
        app:layout_constraintRight_toRightOf="@+id/main_wonderfuk_activity" />

</android.support.constraint.ConstraintLayout>