<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/half"
    >

    <ImageView
        android:id="@+id/system_about_us_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_80"
        android:layout_marginRight="@dimen/dp_70"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@mipmap/system_about_us_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/system_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:text="关于我们"
        android:textColor="@color/color_8d3c00"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/system_about_us_bg"
        app:layout_constraintRight_toRightOf="@+id/system_about_us_bg"
        app:layout_constraintTop_toTopOf="@+id/system_about_us_bg" />

    <ImageView
        android:id="@+id/system_about_us_log"
        android:layout_width="@dimen/dp_79"
        android:layout_height="@dimen/dp_93"
        android:background="@mipmap/system_about_us_log"
        app:layout_constraintBottom_toBottomOf="@+id/system_about_us_bg"
        app:layout_constraintLeft_toLeftOf="@+id/system_about_us_bg"
        app:layout_constraintRight_toRightOf="@+id/system_about_us_bg"
        app:layout_constraintTop_toTopOf="@+id/system_about_us_bg"
        app:layout_constraintVertical_bias="0.35" />

    <TextView
        android:id="@+id/system_about_us_versions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:textColor="@color/color_8d3c00"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/system_about_us_log"
        app:layout_constraintRight_toRightOf="@+id/system_about_us_log"
        app:layout_constraintTop_toBottomOf="@+id/system_about_us_log" />


    <TextView
        android:id="@+id/system_about_us_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_8"
        android:gravity="center"
        android:textColor="@color/color_8d3c00"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/system_about_us_bg"
        app:layout_constraintLeft_toLeftOf="@+id/system_about_us_log"
        app:layout_constraintRight_toRightOf="@+id/system_about_us_log" />

    <ImageView
        android:id="@+id/set_up_shut_down"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:background="@mipmap/set_up_shut_down"
        app:layout_constraintRight_toRightOf="@+id/system_about_us_bg"
        app:layout_constraintTop_toTopOf="@+id/system_about_us_bg" />
</android.support.constraint.ConstraintLayout>