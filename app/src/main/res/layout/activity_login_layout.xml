<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/activity_chess_login_type_bg">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_half"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/green_back"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_27"
        android:layout_marginTop="@dimen/dp_18"
        android:src="@mipmap/green_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/login_image_bg"
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_289"
        android:background="@mipmap/login_image_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/login_phone"
        android:layout_width="@dimen/dp_235"
        android:layout_height="@dimen/dp_34"
        android:layout_marginTop="@dimen/dp_73"
        android:background="@mipmap/loging_edittext_bg"
        android:gravity="center_vertical"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:paddingLeft="@dimen/dp_18"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/login_image_bg"
        app:layout_constraintRight_toRightOf="@+id/login_image_bg"
        app:layout_constraintTop_toTopOf="@+id/login_image_bg" />

    <EditText
        android:id="@+id/login_password"
        android:layout_width="@dimen/dp_235"
        android:layout_height="@dimen/dp_34"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@mipmap/loging_edittext_bg"
        android:gravity="center_vertical"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/dp_18"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/login_image_bg"
        app:layout_constraintRight_toRightOf="@+id/login_image_bg"
        app:layout_constraintTop_toBottomOf="@+id/login_phone" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="@dimen/dp_235"
        android:layout_height="@dimen/dp_34"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@mipmap/login_button"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/login_image_bg"
        app:layout_constraintRight_toRightOf="@+id/login_image_bg"
        app:layout_constraintTop_toBottomOf="@+id/login_password" />

    <TextView
        android:id="@+id/login_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="忘记密码"
        android:textColor="@color/color_bf5f00"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/login_button"
        app:layout_constraintTop_toBottomOf="@+id/login_button" />

    <TextView
        android:id="@+id/login_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="点击注册"
        android:textColor="@color/color_bf5f00"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="@+id/login_button"
        app:layout_constraintTop_toBottomOf="@+id/login_button" />

</android.support.constraint.ConstraintLayout>