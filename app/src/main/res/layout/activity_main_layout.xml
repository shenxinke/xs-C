<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.main.MainActivity">

    <ImageView
        android:id="@+id/main_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/main_background" />

    <ImageView
        android:id="@+id/main_set"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_19"
        android:background="@mipmap/main_set"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/main_announcement_bag"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_53"
        android:layout_marginRight="@dimen/dp_7"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@mipmap/main_announcement_bag"
        app:layout_constraintRight_toLeftOf="@+id/main_set"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/main_gift_bag"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_7"
        android:layout_marginTop="@dimen/dp_19"
        android:background="@mipmap/main_gift_bag"
        app:layout_constraintRight_toLeftOf="@+id/main_announcement_bag"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/main_invite"
        android:layout_width="@dimen/dp_82"
        android:layout_height="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_5"
        android:background="@mipmap/main_invite"
        app:layout_constraintBottom_toBottomOf="@+id/main_gift_bag"
        app:layout_constraintRight_toLeftOf="@+id/main_gift_bag"
        app:layout_constraintTop_toTopOf="@+id/main_gift_bag" />


    <ImageView
        android:id="@+id/main_image_head"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_65"
        android:layout_marginLeft="@dimen/dp_22"
        android:layout_marginTop="@dimen/dp_18"
        android:src="@mipmap/main_image_head"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_13"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_5"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/main_image_head"
        app:layout_constraintTop_toTopOf="@+id/main_image_head" />

    <ImageView
        android:id="@+id/image_head"
        android:layout_width="@dimen/dp_39"
        android:layout_height="@dimen/dp_39"
        android:layout_marginLeft="@dimen/dp_7"
        android:layout_marginTop="@dimen/dp_4"
        app:layout_constraintLeft_toLeftOf="@+id/main_image_head"
        app:layout_constraintTop_toTopOf="@+id/main_image_head" />

    <ImageView
        android:id="@+id/main_picture_frame_image"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        app:layout_constraintBottom_toBottomOf="@+id/image_head"
        app:layout_constraintLeft_toLeftOf="@+id/image_head"
        app:layout_constraintRight_toRightOf="@+id/image_head"
        app:layout_constraintTop_toTopOf="@+id/image_head" />

    <TextView
        android:id="@+id/text_leve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_3"
        android:text="0k"
        android:textColor="@color/color_854b00"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/image_head"
        app:layout_constraintRight_toRightOf="@+id/image_head"
        app:layout_constraintTop_toBottomOf="@+id/image_head" />

    <TextView
        android:id="@+id/text_money"
        android:layout_width="@dimen/dp_71"
        android:layout_height="@dimen/dp_19"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@mipmap/main_money_background"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_5"
        android:textColor="@color/color_a9500c"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/image_head"
        app:layout_constraintLeft_toLeftOf="@+id/main_money_image"
        app:layout_constraintTop_toTopOf="@+id/main_money_image" />

    <ImageView
        android:id="@+id/main_money_image"
        android:layout_width="@dimen/dp_22"
        android:layout_height="@dimen/dp_28"
        android:layout_marginLeft="@dimen/dp_30"
        android:src="@mipmap/main_money_image"
        app:layout_constraintBottom_toBottomOf="@+id/image_head"
        app:layout_constraintLeft_toRightOf="@+id/main_image_head"
        app:layout_constraintTop_toTopOf="@+id/main_image_head" />

    <ImageView
        android:id="@+id/main_money_add"
        android:layout_width="@dimen/dp_21"
        android:layout_height="@dimen/dp_21"
        android:layout_marginLeft="@dimen/dp_5"
        android:src="@mipmap/main_money_add"
        app:layout_constraintBottom_toBottomOf="@+id/text_money"
        app:layout_constraintLeft_toRightOf="@+id/text_money"
        app:layout_constraintTop_toTopOf="@+id/text_money" />

    <ImageView
        android:id="@+id/main_story"
        android:layout_width="@dimen/dp_346"
        android:layout_height="@dimen/dp_250"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_5"
        android:scaleType="fitXY"
        android:src="@mipmap/main_story"
        app:layout_constraintBottom_toBottomOf="@+id/main_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/main_play_chess"
        app:layout_constraintTop_toTopOf="@+id/main_background"
        app:layout_constraintVertical_bias="0.8" />

    <ImageView
        android:id="@+id/main_play_chess"
        android:layout_width="@dimen/dp_249"
        android:layout_height="@dimen/dp_120"
        android:layout_marginRight="@dimen/dp_15"
        android:scaleType="fitXY"
        android:src="@mipmap/main_play_chess_layer"
        app:layout_constraintLeft_toRightOf="@+id/main_story"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/main_story" />

    <ImageView
        android:id="@+id/main_lock_play_chess"
        android:layout_width="@dimen/dp_249"
        android:layout_height="@dimen/dp_120"
        android:background="@mipmap/main_lock_image"
        app:layout_constraintBottom_toBottomOf="@+id/main_play_chess"
        app:layout_constraintLeft_toLeftOf="@+id/main_play_chess"
        app:layout_constraintRight_toRightOf="@+id/main_play_chess"
        app:layout_constraintTop_toTopOf="@+id/main_play_chess" />

    <ImageView
        android:id="@+id/main_wonderfuk_activity"
        android:layout_width="@dimen/dp_249"
        android:layout_height="@dimen/dp_120"
        android:layout_marginTop="@dimen/dp_10"
        android:scaleType="fitXY"
        android:src="@mipmap/main_wonderfuk_activity_layer"
        app:layout_constraintLeft_toLeftOf="@+id/main_play_chess"
        app:layout_constraintRight_toRightOf="@+id/main_play_chess"
        app:layout_constraintTop_toBottomOf="@+id/main_play_chess" />

    <ImageView
        android:id="@+id/main_lock_wonderfuk_activity"
        android:layout_width="@dimen/dp_249"
        android:layout_height="@dimen/dp_120"
        android:background="@mipmap/main_lock_image"
        app:layout_constraintBottom_toBottomOf="@+id/main_wonderfuk_activity"
        app:layout_constraintLeft_toLeftOf="@+id/main_wonderfuk_activity"
        app:layout_constraintRight_toRightOf="@+id/main_wonderfuk_activity"
        app:layout_constraintTop_toTopOf="@+id/main_wonderfuk_activity" />

</android.support.constraint.ConstraintLayout>