<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/half"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/half" />

    <ImageView
        android:id="@+id/image_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_55"
        android:layout_marginLeft="@dimen/dp_140"
        android:layout_marginRight="@dimen/dp_130"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@mipmap/system_about_us_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/congratulation_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:text="恭喜获得成就奖励"
        android:textColor="@color/color_8d3c00"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@+id/image_bg"
        app:layout_constraintRight_toRightOf="@+id/image_bg"
        app:layout_constraintTop_toTopOf="@+id/image_bg" />

    <ImageView
        android:id="@+id/achievement_image"
        android:layout_width="@dimen/dp_86"
        android:layout_height="@dimen/dp_71"
        android:layout_marginLeft="@dimen/dp_60"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/image_bg"
        app:layout_constraintLeft_toLeftOf="@+id/image_bg"
        app:layout_constraintRight_toLeftOf="@+id/arrows_image"
        app:layout_constraintTop_toTopOf="@+id/image_bg" />

    <ImageView
        android:id="@+id/arrows_image"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_33"
        android:background="@mipmap/arrows"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/image_bg"
        app:layout_constraintLeft_toRightOf="@+id/achievement_image"
        app:layout_constraintRight_toLeftOf="@+id/award_image"
        app:layout_constraintTop_toTopOf="@+id/image_bg" />

    <ImageView
        android:id="@+id/award_image"
        android:layout_width="@dimen/dp_86"
        android:layout_height="@dimen/dp_71"
        android:layout_marginRight="@dimen/dp_70"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/image_bg"
        app:layout_constraintLeft_toRightOf="@+id/arrows_image"
        app:layout_constraintRight_toRightOf="@+id/image_bg"
        app:layout_constraintTop_toTopOf="@+id/image_bg" />

    <TextView
        android:id="@+id/text_product_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/award_image"
        app:layout_constraintLeft_toRightOf="@+id/award_image"
        app:layout_constraintTop_toTopOf="@+id/award_image" />

    <TextView
        android:id="@+id/congratulation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_8d3c00"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/image_bg"
        app:layout_constraintLeft_toLeftOf="@+id/image_bg"
        app:layout_constraintRight_toRightOf="@+id/image_bg"
        app:layout_constraintTop_toTopOf="@+id/image_bg"
        app:layout_constraintVertical_bias="0.4" />

    <Button
        android:id="@+id/button_save"
        android:layout_width="@dimen/dp_110"
        android:layout_height="@dimen/dp_35"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_37"
        android:background="@mipmap/green_button"
        android:paddingBottom="@dimen/dp_5"
        android:text="确定"
        android:textColor="@color/color_4b8e05"
        app:layout_constraintBottom_toBottomOf="@+id/image_bg"
        app:layout_constraintLeft_toLeftOf="@+id/image_bg"
        app:layout_constraintRight_toRightOf="@+id/image_bg" />
</android.support.constraint.ConstraintLayout>