<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/half">

    <ImageView
        android:id="@+id/wx_share_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_178"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/wx_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_25"
        android:text="分享到"
        android:textColor="@color/color_be631f"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/wx_share_bg"
        app:layout_constraintRight_toRightOf="@+id/wx_share_bg"
        app:layout_constraintTop_toTopOf="@+id/wx_share_bg" />

    <ImageView
        android:id="@+id/wx_friend"
        android:layout_width="@dimen/dp_52"
        android:layout_height="@dimen/dp_52"
        android:background="@mipmap/wx_friend"
        app:layout_constraintLeft_toLeftOf="@+id/wx_share_bg"
        app:layout_constraintRight_toLeftOf="@+id/wx_circle_of_friends"
        app:layout_constraintTop_toBottomOf="@+id/wx_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:text="微信好友"
        android:textColor="@color/color_be631f"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/wx_friend"
        app:layout_constraintRight_toRightOf="@+id/wx_friend"
        app:layout_constraintTop_toBottomOf="@+id/wx_friend" />

    <ImageView
        android:id="@+id/wx_circle_of_friends"
        android:layout_width="@dimen/dp_52"
        android:layout_height="@dimen/dp_52"
        android:background="@mipmap/wx_circle_of_riends"
        app:layout_constraintLeft_toRightOf="@+id/wx_friend"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/wx_friend" />

    <TextView
        android:id="@+id/wx_text_circle_of_riends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:text="微信朋友圈"
        android:textColor="@color/color_be631f"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/wx_circle_of_friends"
        app:layout_constraintRight_toRightOf="@+id/wx_circle_of_friends"
        app:layout_constraintTop_toBottomOf="@+id/wx_circle_of_friends" />


    <View
        android:id="@+id/wx_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/color_dddddd"
        app:layout_constraintTop_toBottomOf="@+id/wx_text_circle_of_riends" />

    <Button
        android:id="@+id/wx_share_cancel"
        android:layout_width="@dimen/dp_172"
        android:layout_height="@dimen/dp_32"
        android:background="@drawable/shape_wx_share_cancel"
        android:text="取消"
        android:textColor="@color/wai_content_color"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/wx_share_bg"
        app:layout_constraintLeft_toLeftOf="@id/wx_share_bg"
        app:layout_constraintRight_toRightOf="@+id/wx_share_bg"
        app:layout_constraintTop_toBottomOf="@+id/wx_line" />
</android.support.constraint.ConstraintLayout>