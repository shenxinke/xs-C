<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/half"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/login_signin_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_39"
        android:layout_marginLeft="@dimen/dp_97"
        android:layout_marginRight="@dimen/dp_96"
        android:layout_marginTop="@dimen/dp_45"
        android:background="@mipmap/system_about_us_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_23"
        android:text="每日登陆奖励奖励"
        android:textColor="@color/color_8d3c00"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/login_signin_bg"
        app:layout_constraintRight_toRightOf="@+id/login_signin_bg"
        app:layout_constraintTop_toTopOf="@+id/login_signin_bg" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_100"
        android:layout_marginLeft="@dimen/dp_133"
        android:layout_marginRight="@dimen/dp_126"
        android:layout_marginTop="@dimen/dp_100" />

    <Button
        android:id="@+id/button_save"
        android:layout_width="@dimen/dp_110"
        android:layout_height="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@mipmap/yellow_button_bg"
        android:text="确定"
        android:textColor="@color/color_8d3c00"
        android:textSize="14sp"
        android:paddingBottom="@dimen/dp_5"
        app:layout_constraintLeft_toLeftOf="@+id/login_signin_bg"
        app:layout_constraintRight_toRightOf="@+id/login_signin_bg"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view" />

</android.support.constraint.ConstraintLayout>