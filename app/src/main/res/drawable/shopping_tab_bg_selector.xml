<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
            <item android:drawable="@drawable/shape_achievement_select" android:left="5dp">
            </item>
        </layer-list>
    </item>

    <item android:state_selected="false">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
            <item android:drawable="@drawable/shape_achievement_no_select" android:left="5dp">
            </item>
        </layer-list>
    </item>

</selector>
